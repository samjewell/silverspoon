.row
  .col-xs-12.col-md-6.push-md-3
    .panel.panel-default.panel-boundary
      .panel-heading
        %h2= t('.change_password', :default => 'Change your password')
      .panel-body
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form" }) do |f|
          = devise_bootstrap_error_messages!
          = f.hidden_field :reset_password_token
          .form-group
            = f.label :password, "New password"
            = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"
            - if @minimum_password_length
              %small.form-text.text-muted
                (#{@minimum_password_length} characters minimum)
          .form-group
            = f.label :password_confirmation, "Confirm new password"
            = f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"
          = f.submit  t('.change_password_submit', :default => "Change my password"), class: "btn btn-primary"
      = render "devise/shared/links"
